<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clone.mobapdemp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserSettingActivity"
            android:label="@string/title_activity_user_setting"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ContentActivity"
            android:label="@string/title_activity_content"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ContentsActivity"
            android:label="@string/title_activity_contents"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ContentsSettingActivity"
            android:label="@string/title_activity_contents_setting"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AddContentActivity"
            android:label="@string/title_activity_add_content"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".NumberSettingActivity"
            android:label="@string/title_activity_number_setting"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AddNumberActivity"
            android:label="@string/title_activity_add_number"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
