<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aakov.emergencyapp.EmergencyListActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorLightGray"
        android:id="@+id/container_emergency_list_header">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/button_emergency_list_back"
            android:background="@drawable/bt_back2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emergency_list"
            android:textAllCaps="true"
            android:id="@+id/tv_emergency_list_header"
            android:layout_alignTop="@id/button_emergency_list_back"
            android:layout_toEndOf="@id/button_emergency_list_back"
            android:layout_marginStart="21dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textIsSelectable="false"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_addlist"
            android:id="@+id/button_emergency_list_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_emergency_list"/>

</LinearLayout>
